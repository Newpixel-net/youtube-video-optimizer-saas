{
  "name": "video-processor-service",
  "version": "1.0.0",
  "description": "Cloud Run video processing service for YouTube Video Optimizer",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "docker build -t video-processor .",
    "deploy": "gcloud run deploy video-processor --source . --region us-central1 --allow-unauthenticated"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.3.0",
    "@google-cloud/storage": "^7.7.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^2.0.2",
    "uuid": "^9.0.1",
    "youtubei.js": "^13.0.0"
  },
  "keywords": [
    "video-processing",
    "ffmpeg",
    "cloud-run",
    "youtube-shorts"
  ],
  "author": "",
  "license": "MIT"
}
