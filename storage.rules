rules_version = '2';
// [VERIFIED-FIX-2025-12-01] Added creative-studio folder access
service firebase.storage {
  match /b/{bucket}/o {
    // Thumbnails folder
    // Note: Cloud Functions using Admin SDK bypass these rules
    match /thumbnails/{userId}/{fileName} {
      // Allow public read access for thumbnails (needed for sharing/display)
      allow read: if true;

      // Allow authenticated users to write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Creative Studio folder (for history images and template covers)
    // Note: Cloud Functions using Admin SDK bypass these rules
    match /creative-studio/{userId}/{fileName} {
      // Allow public read access (needed for history display, community gallery, template covers)
      allow read: if true;

      // Allow authenticated users to write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Campaign report images folder (admin only)
    // Note: Cloud Functions using Admin SDK bypass these rules for writes
    match /campaign-reports/{reportId}/{fileName} {
      // Allow authenticated users to read (for viewing reports)
      allow read: if request.auth != null;

      // Writes are handled by Cloud Functions with Admin SDK
      allow write: if false;
    }

    // Video uploads folder (for Video Wizard)
    match /uploads/{userId}/{fileName} {
      // Allow users to read their own uploads
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow authenticated users to write to their own folder
      // Limit file size to 500MB and only allow video types
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 500 * 1024 * 1024
                   && request.resource.contentType.matches('video/.*');
    }

    // Deny access to all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
